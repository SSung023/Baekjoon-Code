#include <iostream>
#include <algorithm>
#include <string>
#include <string.h>
#include <math.h>
#include <vector>
#include <stack>

#define INF 987654321
#define MAX 10000 + 1
#define MIN -987654321
using namespace std;

// 2156 - 포도주 시식
int n;
vector<int> grape;
vector<vector<int>> dp;

void input(){
    cin >> n;
    grape.assign(n + 1, 0);
    dp.assign(2, vector<int>(n + 1, 0));

    for(int i = 1; i <= n; i++){
        cin >> grape[i];
    }
}

int getMaxGrape(){
    int answer = 0;
    dp[0][1] = grape[1];
    dp[1][1] = grape[1];

    for(int i = 2; i <= n; i++){
        dp[0][i] = dp[1][i - 1] + grape[i];
        dp[1][i] = grape[i] + max(dp[1][i - 2], dp[0][i - 2]);
        answer = max(answer, max(dp[0][i], dp[1][i]));
    }

    return answer;
}

int main(void){

    ios::sync_with_stdio(false);
    cin.tie(NULL);
    cout.tie(NULL);

    input();
    cout << getMaxGrape();

    return 0;
}
